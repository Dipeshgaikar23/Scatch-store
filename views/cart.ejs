<%- include('./partials/header') %>
    <% if(user.cart.length===0){ %>
        <div class="w-[100%] mt-10">
                <div class="flex justify-center items-center">
                <img class="h-80 " src="/images/cart.png" alt="Cart Image">
            </div>
            <h2 class="flex justify-center w-[100%] text-2xl mt-7">Your cart is Empty</h2>
            <p class="flex justify-center w-[100%] mt-2">Go to <a class=" mx-2 text-white rounded-full bg-blue-500 px-2" href="/shop"> shop</a></p>
        </div>
        <% }else{ %>
            <% let totalMRP=0; let totalDiscount=0; %>
                <div class="w-full flex items-center justify-center px-20 py-5 gap-10">
                    <% user.cart.forEach((item)=>{
                        totalMRP += Number(item.price);
                        totalDiscount += Number(item.discount || 0);
                        %>
                        <div class="w-[20%] rounded-md overflow-hidden">
                            <div class="w-full h-80 bg-[<%= item.bgcolor %>] flex items-center justify-center">
                                <img class="h-[15rem]" src="data:image/jpeg;base64,<%= item.image.toString('base64') %>"
                                    alt="">
                            </div>
                            <div class="w-full flex justify-between px-5 py-4 bg-[<%= item.panelcolor %>]">
                                <h3 class="text-2xl text-[<%= item.textcolor %>]">
                                    <%= item.name %>
                                </h3>
                                <div class="flex items-center gap-2">
                                    <i
                                        class="w-7 h-7 bg-white flex rounded-full items-center justify-center ri-add-line"></i>
                                    <div class="px-2 py-1 rounded-md bg-white text-black">01</div>
                                    <i
                                        class="w-7 h-7 bg-white flex rounded-full items-center justify-center ri-subtract-line"></i>
                                </div>
                            </div>
                            <div class="flex items-center justify-between px-5 py-3 bg-[<%= item.textcolor %>] text-white">
                                <h4 class="text-lg">MRP</h4>
                                <h2 class="text-lg">₹ <%=item.price %>
                                </h2>

                            </div>
                        </div>
                        <% }) %>

                </div>
                <div class="w-[100%] flex justify-center mb-10">
                    <div class="w-[60rem]">

                        <h3 class="text-xl">Price Breakdown</h3>
                        <div class=" mt-5">
                            <div class="flex mt-2">
                                <h4 class="w-1/3">Total MRP</h4>
                                <h4>₹ <%= totalMRP %>
                                </h4>
                            </div>
                            <div class="flex mt-2">
                                <h4 class="w-1/3">Discount on MRP</h4>
                                <h4>₹ <%= totalDiscount %>
                                </h4>
                            </div>
                            <div class="flex mt-2">
                                <h4 class="w-1/3">Platform Fee</h4>
                                <h4>₹ 20</h4>
                            </div>
                            <div class="flex mt-2">
                                <h4 class="w-1/3">Shipping Fee</h4>
                                <h4 class="text-green-700">FREE</h4>
                            </div>
                        </div>
                        <div class="w-full h-[1px] bg-black mt-10"></div>
                        <div class="flex mt-5">
                            <h3 class="w-1/3 text-xl">Total Amount</h3>
                            <h3 class="font-semibold text-xl text-green-600">₹ <%= (totalMRP + 20 - totalDiscount) %>
                            </h3>
                        </div>
                        <div>
                            <input type="submit" class="bg-blue-500 text-white text-lg rounded-full mt-5 p-3" value="Checkout">
                        </div>
                        <form action=""></form>
                    </div>
                </div>
                <% } %>
                    <%- include('./partials/footer') %>