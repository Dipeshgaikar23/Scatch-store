<%- include('./partials/header') %>
    <% if(success.length>0){ %>
        <div class="absolute top-5 left-1/2 -translate-x-1/2 -translate-y-1/2 p-3 rounded-md bg-green-500">
            <span class="inline-block mt-1 mb-1 text-white">
                <%= success %>
            </span>
        </div>
        <% } %>
    <% if(error.length>0){ %>
        <div class="absolute top-5 left-1/2 -translate-x-1/2 -translate-y-1/2 p-3 rounded-md bg-red-500">
            <span class="inline-block mt-1 mb-1 text-white">
                <%= error %>
            </span>
        </div>
        <% } %>
            <div class="w-full h-screen flex items-start pl-20">
                <div class="w-[15%] flex h-screen flex-col items-start py-20">
                    <div class="flex items-center gap-2">
                        <h3>sort by</h3>
                        <form action="/shop">
                            <select class="border-[1px] px-2 py-1" name="sortby" id="">
                                <option value="popular">Popular</option>
                                <option value="newest">Newest</option>
                            </select>
                        </form>
                    </div>
                    <div class="flex flex-col mt-20">
                        <a class="block w-fit mb-2" href="">New Collection</a>
                        <a class="block w-fit mb-2" href="">All Products</a>
                        <a class="block w-fit mb-2" href="">Discounted Products</a>
                    </div>
                    <div class="mt-32">
                        <a class="block w-fit mb-2" href="">Filter by :</a>
                        <a class="block w-fit mb-2" href="">Availability</a>
                        <a class="block w-fit mb-2" href="">Discount</a>
                    </div>
                </div>
                <div class="w-[75%] flex flex-col gap-5 min-h-min border-blue-300 border-2 p-16 mt-5 rounded-md">
                    <div class="flex flex-wrap gap-5">
                        <% if (products && products.length> 0) { %>
                            <% products.forEach(function(product) { %>
                                <div class="w-60 ">
                                    <div
                                        class="w-full h-52 flex items-center justify-center bg-[<%= product.bgcolor %>] rounded-t-md">
                                        <img class="h-[12rem]"
                                            src="data:image/jpeg;base64,<%= product.image.toString('base64') %>" alt="">
                                    </div>
                                    <div
                                        class="rounded-b-md flex justify-between bg-[<%= product.panelcolor %>] items-center px-4 py-4 text-[<%= product.textcolor %>]">
                                        <div>
                                            <h3>
                                                <%= product.name %>
                                            </h3>
                                            <h4>â‚¹ <%= product.price %>
                                            </h4>
                                        </div>
                                        <a class="w-7 h-7 flex items-center justify-center rounded-full bg-white"
                                            href="/addtocart/<%= product._id %>">
                                            <i class="ri-add-line"></i>
                                        </a>
                                    </div>
                                </div>
                                <% }); %>
                                    <% } else { %>
                                        <p>No products available.</p>
                                        <% } %>
                    </div>

                </div>
            </div>
            <%- include('./partials/footer') %>